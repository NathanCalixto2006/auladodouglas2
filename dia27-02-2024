import java.util.Scanner;

public class SomaQuadrados {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Digite quatro números:");
        double numero1 = scanner.nextDouble();
        double numero2 = scanner.nextDouble();
        double numero3 = scanner.nextDouble();
        double numero4 = scanner.nextDouble();
        
        double quadrado1 = Math.pow(numero1, 2);
        double quadrado2 = Math.pow(numero2, 2);
        double quadrado3 = Math.pow(numero3, 2);
        double quadrado4 = Math.pow(numero4, 2);
        
        double somaQuadrados = quadrado1 + quadrado2 + quadrado3 + quadrado4;
        
        System.out.println("A soma dos quadrados dos números é: " + somaQuadrados);
        
        scanner.close();
    }
}
